<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background layer -->
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="#2196F3" /> <!-- Background color -->
        </shape>
    </item>

    <!-- Progress layer -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="#E35252" /> <!-- Progress color -->
            </shape>
        </clip>
    </item>

</layer-list>
