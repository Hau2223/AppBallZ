<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#222232"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"

        >

        <ImageView
            android:id="@+id/imgClub"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_gravity="left"
            android:layout_weight="2"
            app:srcCompat="@drawable/arsenal" />

        <TextView
            android:id="@+id/tvNameClub"
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="28"
            android:text="Arsenal"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvWinNum"
            android:layout_width="63.5dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_weight="15"
            android:gravity="start"
            android:text="9"
            android:textColor="#FFFFFF"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tvDrawNum"
            android:layout_width="63.5dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_weight="15"
            android:gravity="start"
            android:text="9"
            android:textColor="#FFFFFF"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tvLoseNum"
            android:layout_width="63.5dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_weight="15"
            android:gravity="start"
            android:text="9"
            android:textColor="#FFFFFF"

            android:textSize="18dp" />

        <TextView
            android:id="@+id/tvPoint"
            android:layout_width="63.5dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_weight="15"
            android:gravity="center"
            android:text="9"
            android:textColor="#FFFFFF"

            android:textSize="18dp" />

    </LinearLayout>
</LinearLayout>