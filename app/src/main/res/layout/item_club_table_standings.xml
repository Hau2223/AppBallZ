<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:background="@color/purple_200"
        android:padding="20dp"

       >
        <ImageView
            android:id="@+id/imgClub"
            android:layout_width="50dp"
            android:layout_weight="8"
            android:layout_height="35dp"

            android:layout_gravity="left"
            app:srcCompat="@drawable/arsenal" />

        <TextView
            android:id="@+id/tvNameClub"
            android:layout_width="200dp"
            android:layout_weight="32"
            android:layout_height="wrap_content"

            android:text="Arsenal"
            android:layout_gravity="center"
            android:textColor="#DC0C0C"/>

        <TextView
            android:id="@+id/tvWinNum"
            android:layout_width="62.5dp"
            android:layout_weight="15"
            android:layout_height="wrap_content"

            android:text="9"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#DC0C0C"/>

        <TextView
            android:id="@+id/tvDrawNum"
            android:layout_width="62.5dp"
            android:layout_weight="15"
            android:layout_height="wrap_content"

            android:text="9"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#DC0C0C"/>

        <TextView
            android:id="@+id/tvLoseNum"
            android:layout_width="62.5dp"
            android:layout_weight="15"
            android:layout_height="wrap_content"

            android:text="9"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#DC0C0C"/>

        <TextView
            android:id="@+id/tvPoint"
            android:layout_width="62.5dp"
            android:layout_height="wrap_content"
            android:layout_weight="15"

            android:text="9"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#DC0C0C"/>

    </LinearLayout>
</LinearLayout>