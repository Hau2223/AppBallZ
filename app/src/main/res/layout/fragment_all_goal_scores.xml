<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#181928"
    tools:context=".FragmentAllGoalScores">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgBTableStanding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.1"
                android:padding="5dp"
                android:src="@drawable/arrow_back_30" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="Goals Scored"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="35dp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="-20dp"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="700dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:background="@drawable/radius_tablestandings">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.01"
                    android:text="Player Name"
                    android:textStyle="italic|bold"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="20dp" />
                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Club"
                    android:layout_weight="0.01"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="20dp" />
                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.01"
                    android:layout_marginRight="10dp"
                    android:textStyle="bold"
                    android:gravity="right"
                    android:text="Goals"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

            </LinearLayout>
            <ListView
                android:id="@+id/lvTableAllGoalScores"
                android:layout_width="match_parent"
                android:layout_height="720dp"
                android:layout_marginTop="10dp"
                android:background="#EAEAEA"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                />
        </LinearLayout>
    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
</FrameLayout>